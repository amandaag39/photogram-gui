<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @the_photo.image %>"></dd>
  <dt>Caption</dt>
  <dd><%= @the_photo.caption %></dd>
  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>
  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>
  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>" method="post">

      <label for="browser_image_input">Image</label>
      <input id="browser_image_input" type="text" name="edit_image_input" value="<%= @the_photo.image %>">

      <label for="browser_image_caption">Caption</label>
      <textarea name="edit_caption_input" id="browser_image_caption" rows="2"><%= @the_photo.caption %></textarea>
        
      <button type="submit">
        Update photo
      </button>
    </form>

  </dd>
  <dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a></dd>
</dl>

<h2>Comments</h2>
<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  
  <% @the_photo.comments.each do |a_comment| %>
  <tr>
    <td><%= a_comment.commenter.username %></td>
    <td><%= a_comment.body %></td>
    <td><%= a_comment.created_at %></td>
  </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>

<form action="/add_comment" method="post">
  <label for="photo_id_field">Photo ID</label>
  <input id="photo_id_field" type="text" name="photo_id_input" value="<%= @the_photo.id %>">

  <label for="author_id_field">Author ID</label>
  <input id="author_id_field" type="text" name="author_id_input" placeholder="Enter your author ID">

  <label for="comment_textarea">Comment</label>
  <textarea id="comment_textarea" name="comment_input" placeholder="Enter a comment..."></textarea>

  <button>
    Add comment
  </button>
</form>
